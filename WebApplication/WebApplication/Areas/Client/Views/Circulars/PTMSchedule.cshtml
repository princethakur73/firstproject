<!--============================
        About Page Header
    =============================-->
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>PTM Schedule</h1>
                <ul class="list-unstyled">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="active">PTM Schedule</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Ends: .page-header -->
<!--============================
        About Page Content
    =============================-->
<section class="about-ds">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-12 ">
                @Html.Partial("~/Areas/Client/Views/Shared/_CircularsSidebar.cshtml", 11)
            </div>
            <div class="col-sm-9">
                <h1>PTM Schedule</h1>
                <div id="table">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Title</th>
                                <th>Class</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        @if (Model.Count > 0)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="row-command">
                                        <td>@item.Month.ToString("MMM yyyy")</td>
                                        <td>@item.Title</td>
                                        <td>@item.Class</td>
                                        <td>@item.Time</td>
                                    </tr>
                                }
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                <tr>
                                    <td colspan="4">Data not found</td>
                                </tr>
                            </tbody>
                        }
                    </table>

                    <!-- pager -->

                </div>
            </div>
        </div>
    </div>
</section>