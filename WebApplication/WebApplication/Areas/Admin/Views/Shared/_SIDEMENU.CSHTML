@using System.Linq;
@using WebApplication.Infrastructure
@{
    var dbContext = Context.GetContainer().GetInstance<WebApplication.Infrastructure.ICurrentUser>();
    var parentMenu = dbContext.UserMenu.Where(m => m.Menu.ParentMenuId == 0);
    var childMenu = dbContext.UserMenu.Where(m => m.Menu.ParentMenuId != 0);
}
<ul class="sidebar-menu">
    <li class="header">MAIN NAVIGATION</li>
    <li class="">
        <a href="@Url.Action("Index","Home")">
            <i class="fa fa-dashboard"></i> <span>Dashboard</span>

        </a>

    </li>
    @foreach (var parent in parentMenu)
    {
        var children = childMenu.Where(m => m.Menu.ParentMenuId == parent.Menu.Id);
        <li class="treeview">
            @if (children.Count() == 0)
            {
                <a href="@string.Format("/Admin/{0}/{1}", parent.Menu.Controller, parent.Menu.Action)">
                    <i class="fa fa-edit"></i>
                    @parent.Menu.Name

                </a>
            }
            else
            {
                <a href="#">
                    <i class="fa fa-edit"></i>
                    <span>@parent.Menu.Name</span>

                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>

                </a>
                <ul class="treeview-menu">
                    @foreach (var child in children)
                    {
                        <li><a href="@Url.Action(child.Menu.Action, child.Menu.Controller, new { area = "Admin" })"><i class="fa fa-circle-o"></i> @child.Menu.Name</a></li>
                    }
                </ul>
            }
        </li>
    }
