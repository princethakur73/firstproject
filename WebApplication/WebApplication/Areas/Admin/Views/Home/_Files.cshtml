@model WebApplication.Area.Admin.Models.FileModel
<style>
span.btn-remove{
    cursor:pointer;
}
</style>
<form id="fileupload" method="POST" enctype="multipart/form-data" data-url="@Url.Action(Model.Type,"Home")">
    <div class="row fileupload-buttonbar">
        @Html.HiddenFor(model => model.EntityId)
        <input type="hidden" id="path" name="path" value="/Content/Client/images/" />
        <div class="col-md-12">
                <div class="radio">
                    <label><input type="radio" class="radio radio-inline" checked name="MediaUploadType" value="@MediaUploadType.File" /> @MediaUploadType.File</label>
                    <label><input type="radio" class="radio radio-inline" name="MediaUploadType" value="@MediaUploadType.Link" /> @MediaUploadType.Link</label>
                </div>
            
        </div>
        <div id="link-section">
            <div class="col-md-12"> 
                    <input type="url" class="form-control" id="Name" placeholder="File Link..." name="Name" value="" />
             <br />
                    <button type="button" id="btn-Save-link" value="Save" class="btn btn-success btn-sm bg-green">Save</button>
                    <table class="table table-bordered" id="table-list">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Photo</th>
                                <th>Link</th>
                                <th style="width: 40px">Remove</th>
                            </tr>
                        </thead>
                        <tbody>                           
                        </tbody>
                    </table>
            </div>
        </div>

        <div id="file-section">
            <div class="col-lg-7">
                <!-- The fileinput-button span is used to style the file input field as button -->
                <span class="btn btn-sm bg-blue fileinput-button">
                    <i class="fa fa-plus"></i>
                    <span>Add files...</span>
                    <input type="file" name="files[]" multiple>
                </span>
                <button type="submit" class="btn bg-green btn-sm start">
                    <i class="fa fa-upload"></i>
                    <span>Start upload</span>
                </button>
                <button type="reset" class="btn bg-orange btn-warning btn-sm cancel">
                    <i class="fa fa-ban-circle"></i>
                    <span>Cancel upload</span>
                </button>
                <button type="button" class="btn bg-red btn-sm delete" style="">
                    <i class="fa fa-trash"></i>
                    <span>Delete</span>
                </button>
                <input type="checkbox" class="toggle" style="">
                <!-- The global file processing state -->
                <span class="fileupload-process"></span>
            </div>
            <!-- The global progress state -->
            <div class="col-lg-5 fileupload-progress fade">
                <!-- The global progress bar -->
                <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar progress-bar-success" style="width:0%;"></div>
                </div>
                <!-- The extended global progress state -->
                <div class="progress-extended">&nbsp;</div>
            </div>
            <!-- The global progress state -->
            @*<div class="col-lg-5 fileupload-progress fade">*@
            <!-- The global progress bar -->
            @*<div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-success" style="width:0%;"></div>
            </div>*@
            <!-- The extended global progress state -->
            @*<div class="progress-extended">&nbsp;</div>
            </div>*@

            <!-- The table listing the files available for upload/download -->
            <div class="col-md-12">
                <table role="presentation" class="table table-striped"><tbody class="files"></tbody></table>
            </div>        </div>
    </div>
</form>

<br>
<!-- The blueimp Gallery widget -->
<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-filter=":even">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>
<!-- The template to display files available for upload -->
<script id="template-upload" type="text/x-tmpl">
    {% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-upload fade">
        <td>
            <span class="preview"></span>
        </td>
        <td>
            <p class="name">{%=file.name%}</p>
            <strong class="error text-danger"></strong>
        </td>
        <td>
            <p class="size">Processing...</p>
            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"><div class="progress-bar progress-bar-success" style="width:0%;"></div></div>
        </td>
        <td>
            {% if (!i && !o.options.autoUpload) { %}
            <button class="btn btn-primary start" disabled>
                <i class="fa fa-upload"></i>
                <span>Start</span>
            </button>
            {% } %}
            {% if (!i) { %}
            <button class="btn btn-warning cancel">
                <i class="fa fa-ban-circle"></i>
                <span>Cancel</span>
            </button>
            {% } %}
        </td>
    </tr>
    {% } %}
</script>
<!-- The template to display files available for download -->
<script id="template-download" type="text/x-tmpl">
    {% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-download fade">
        <td>
            <span class="preview">
                {% if (file.thumbnailUrl) { %}
                <a href="../../{%=file.url%}" title="{%=file.title%}" download="{%=file.name%}" type="{%=file.type%}" data-gallery><img width="100" src="../../{%=file.url%}"></a>
                {% } %}
            </span>
        </td>
        <td>
            <p class="name">
                {% if (file.url) { %}
                <a href="{%=file.url%}" title="{%=file.title%}" download="{%=file.name%}" {%=file.thumbnailUrl?'data-gallery':''%}>{%=file.title%}</a>
                {% } else { %}
                <span>{%=file.title%}</span>
                {% } %}
            </p>
            {% if (file.error) { %}
            <div><span class="label label-danger">Error</span> {%=file.error%}</div>
            {% } %}
        </td>
        <td>
            <span class="size">{%=o.formatFileSize(file.size)%}</span>
        </td>
        <td>
            {% if (file.deleteUrl) { %}
            <button class="btn btn-danger delete" data-type="{%=file.deleteType%}" data-url="{%=file.deleteUrl%}" {% if (file.deletewithcredentials) { %} data-xhr-fields='{"withCredentials":true}' {% } %}>
                <i class="glyphicon glyphicon-trash"></i>
                <span>Delete</span>
            </button>
            <input type="checkbox" name="delete" value="1" class="toggle">
            {% } else { %}
            <button class="btn btn-warning cancel">
                <i class="glyphicon glyphicon-ban-circle"></i>
                <span>Cancel</span>
            </button>
            {% } %}
        </td>
    </tr>
    {% } %}
</script>

<script>
    $(document).ready(function () {

        $('body').on('click', '#table-list > tbody > tr > td > .btn-remove', function () {
            var $button = $(this);
            if (confirm('Are you sure you want to delete this record?')) {
                var pictureId = $(this).attr('data-id');
                alert(pictureId);
                $.get('/Admin/Gallery/DeletePhotoByPictureId', { id: pictureId }, function (response) {
                    if (response) {
                        $($button).parent().parent().remove();
                    }
                    else {
                        alert('Failed.');
                    }
                })
            }
        });

        if ($('input[name=MediaUploadType]:checked').val() == 'File') {
            $('#file-section').show();
            $('#link-section').hide();
        }
        else {
            $('#link-section').show();
            $('#file-section').hide();
            bindTable();
        }

        $('input[name=MediaUploadType]').on('change', function () {
            if ($('input[name=MediaUploadType]:checked').val() == 'File') {
                $('#file-section').show();
                $('#link-section').hide();
            }
            else {
                $('#link-section').show();
                $('#file-section').hide();
                bindTable();
            }
        });

        $('#btn-Save-link').click(function () {
            var data = $('#fileupload').serialize();
            $.post('/Admin/Gallery/Photo/', data, function (response) {
                console.log(response);
                $('#Name').val('');
                bindTable();
            });
        });
       
    });
</script>