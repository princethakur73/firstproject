@using System.Linq;
@using WebApplication.Infrastructure

@model int?
@{
    var dbContext = Context.GetContainer().GetInstance<WebApplication.Service.IClassMasterService>();

    var availableClassMasters = dbContext.GetList(currentUserId:0).Select(u => new System.Web.Mvc.SelectListItem
    {
        Text = u.RomanName,
        Value = u.Id.ToString(),
        Selected = u.Id == Model
    }).ToArray();
}

@Html.DropDownList("", availableClassMasters, optionLabel: "Select Class..", htmlAttributes: new { @class = "form-control select2" })

