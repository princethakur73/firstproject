@model Decimal

@Html.TextBoxFor(model => model, new { @readonly=true })
<script>
    $(document).ready(function() {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoNumericTextBox({
            format: "#.00",
            decimals: 2 //always display 4 digits
        });
    });
</script>